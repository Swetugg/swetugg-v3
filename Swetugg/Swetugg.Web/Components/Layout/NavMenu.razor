@using Swetugg.Services;
@using Swetugg.Services.Models
@inject ConferenceManager ConferenceManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Swetugg</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        @foreach (var e in ConferenceEditions)
        { 
            string url = $"{e.City}/{e.Year}";

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="@url">
                    <span class="bi bi-house-door-fill" aria-hidden="true"></span> @($"{e.City} {e.Year}")
                </NavLink>
            </div>

        }
    </nav>
</div>

@code {
    private IEnumerable<ConferenceEdition> ConferenceEditions { get; set; }
    protected override async Task OnInitializedAsync()
    {
        ConferenceEditions = await ConferenceManager.GetAllEditionssAsync();
    }
}
