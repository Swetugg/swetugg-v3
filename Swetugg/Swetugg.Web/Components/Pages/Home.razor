@page "/"
@inject NavigationManager NavigationManager
@using Swetugg.Services;
@inject ConferenceManager ConferenceManager
@rendermode InteractiveServer

@code {

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        var events = await ConferenceManager.GetAllEditionssAsync();
        var currentConf = events.FirstOrDefault(e => e.IsCurrent);
        NavigationManager.NavigateTo($"{currentConf!.City}/{currentConf.Year}");
    }
}